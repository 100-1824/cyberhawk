@startuml CyberHawk_Use_Case_Diagram

left to right direction
skinparam packageStyle rectangle

actor "User" as User
actor "Administrator" as Admin
actor "Security Analyst" as Analyst

rectangle "CyberHawk System" {
    ' Authentication
    usecase "Register Account" as UC1
    usecase "Login" as UC2
    usecase "Verify Email" as UC3
    
    ' Malware Analysis
    usecase "Upload Malware Sample" as UC4
    usecase "Analyze Malware" as UC5
    usecase "View Analysis Report" as UC6
    
    ' Ransomware Protection
    usecase "Start Ransomware Monitor" as UC7
    usecase "Scan for Ransomware" as UC8
    usecase "Quarantine Threats" as UC9
    
    ' Network Monitoring
    usecase "Monitor Network Traffic" as UC10
    usecase "Detect Intrusions" as UC11
    usecase "View Network Analytics" as UC12
    
    ' Threat Intelligence
    usecase "View Threat Feeds" as UC13
    usecase "Block Malicious IOC" as UC14
    
    ' Reporting
    usecase "Generate Security Report" as UC15
    usecase "Export Report" as UC16
    usecase "Email Report" as UC17
    
    ' User Management
    usecase "Manage Profile" as UC18
    usecase "Configure Settings" as UC19
    usecase "View Notifications" as UC20
}

' External Systems
actor "VirusTotal API" as VT
actor "Email Server" as Email

' User Relationships
User --> UC1
User --> UC2
User --> UC3
User --> UC18
User --> UC19
User --> UC20

' Analyst Relationships
Analyst --> UC4
Analyst --> UC5
Analyst --> UC6
Analyst --> UC13
Analyst --> UC14
Analyst --> UC15
Analyst --> UC16
Analyst --> UC17

' Administrator Relationships
Admin --> UC7
Admin --> UC8
Admin --> UC9
Admin --> UC10
Admin --> UC11
Admin --> UC12

' Include Relationships
UC5 ..> UC20 : <<include>>
UC8 ..> UC20 : <<include>>
UC11 ..> UC20 : <<include>>
UC16 ..> UC15 : <<include>>
UC17 ..> UC15 : <<include>>

' Extend Relationships
UC3 ..> UC2 : <<extend>>
UC9 ..> UC8 : <<extend>>

' External System Relationships
UC5 --> VT : uses
UC17 --> Email : uses
UC3 --> Email : uses

@enduml
